{
  "name": "@modular-forms/react",
  "description": "The modular and type-safe form library for React",
  "version": "0.11.1",
  "license": "MIT",
  "author": "Fabian Hiller",
  "homepage": "https://modularforms.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabian-hiller/modular-forms"
  },
  "keywords": [
    "modular-forms",
    "form",
    "forms",
    "react",
    "signals",
    "performance",
    "bundle-size",
    "validation",
    "typescript",
    "type-safe"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "react": "./dist/source/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts",
      "react": "./dist/source/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build --mode lib && tsc",
    "format": "prettier --write .",
    "format.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\" && tsc --noEmit"
  },
  "dependencies": {
    "valibot": "^1.0.0-beta.6"
  },
  "devDependencies": {
    "@preact/signals-react": "^2.2.0",
    "@types/eslint": "^8.56.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "react": "^18.3.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@preact/signals-react": "^1.0.0",
    "react": "^18.0.0"
  }
}
