{
  "name": "@modular-forms/qwik",
  "description": "The modular and type-safe form library for Qwik",
  "version": "0.29.1",
  "license": "MIT",
  "author": "Gideon Gaida",
  "homepage": "https://github.com/MelGidsen/modular-forms",
  "repository": {
    "type": "git",
    "url": "https://github.com/MelGidsen/modular-forms"
  },
  "keywords": [
    "modular-forms",
    "form",
    "forms",
    "qwik",
    "performance",
    "bundle-size",
    "form-validation",
    "validation",
    "typescript",
    "type-safe"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.qwik.mjs",
  "qwik": "./dist/index.qwik.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.qwik.mjs",
      "require": "./dist/index.qwik.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build --mode lib && tsc",
    "format": "prettier --write \"./src\"",
    "format.check": "prettier --check \"./src\"",
    "lint": "eslint \"./src/**/*.ts*\" && tsc --noEmit"
  },
  "dependencies": {
    "decode-formdata": "^0.8.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.9.1",
    "@types/bun": "^1.2.22",
    "@types/eslint": "^8.56.12",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/utils": "^7.18.0",
    "eslint": "8.57.0",
    "eslint-plugin-qwik": "^1.9.1",
    "typescript": "^5.9.0",
    "vite": "^7.1.0",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@builder.io/qwik": "^1.9.0 || ^2.0.0"
  }
}
